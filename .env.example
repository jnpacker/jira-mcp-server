# Jira MCP Server Configuration
# Copy this file to .env and fill in your Jira details

# Required: Your Jira server URL
JIRA_SERVER_URL=https://your-company.atlassian.net

# Required: Your Jira API token
# For Atlassian Cloud, use an API token: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_ACCESS_TOKEN=your-api-token

# Optional: SSL verification (default: true)
JIRA_VERIFY_SSL=true

# Optional: Request timeout in seconds (default: 30)
JIRA_TIMEOUT=30

# Optional: Maximum results per request (default: 100)
JIRA_MAX_RESULTS=100